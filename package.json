{
  "name": "job-tracker-dashboard",
  "version": "0.0.1",
  "author": "Will Wills",
  "license": "MIT",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "generate": "yarn generate:prisma && pal g && yarn generate:nexus && yarn codegen",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only -P nexus.tsconfig.json src/Api/nexusSchema",
    "codegen": "graphql-codegen --config codegen.yml",
    "create-migration": "prisma migrate save --experimental",
    "migrate-database": "prisma migrate up --experimental --auto-approve --create-db",
    "db-start": "docker-compose up -d",
    "db-stop": "docker-compose down",
    "db-dump": "docker exec -it job-dashboard-pg pg_dump --host localhost --port 5432 --username dashboard dashboard > dashboard-dump.sql",
    "db-connect": "docker exec -it job-dashboard-pg psql postgresql://dashboard:dashboard@localhost:5432/dashboard",
    "db-seed": "ts-node --transpile-only -P nexus.tsconfig.json scripts/seed-database",
    "db-drop": "ts-node --transpile-only -P nexus.tsconfig.json scripts/drop-database"
  },
  "dependencies": {
    "@apollo/client": "^3.1.3",
    "@apollo/react-ssr": "4.0.0",
    "@nexus/schema": "0.15.0",
    "@paljs/admin": "2.2.1",
    "@paljs/cli": "^2.2.1",
    "@paljs/icons": "1.0.1",
    "@paljs/nexus": "2.2.1",
    "@paljs/ui": "1.0.3",
    "@prisma/client": "2.8.0",
    "apollo-server-micro": "2.16.1",
    "bcryptjs": "2.4.3",
    "cookie": "0.4.1",
    "graphql-language-service-parser": "^1.6.4",
    "graphql-tag": "^2.11.0",
    "graphql-tools": "6.0.18",
    "jsonwebtoken": "^8.5.1",
    "micro-cors": "^0.1.1",
    "moment": "^2.27.0",
    "next": "9.5.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "styled-components": "5.1.1",
    "ts-node": "8.10.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.17.8",
    "@graphql-codegen/typescript": "1.17.8",
    "@graphql-codegen/typescript-operations": "1.17.8",
    "@graphql-codegen/typescript-react-apollo": "2.0.6",
    "@prisma/cli": "^2.3.0",
    "@types/bcryptjs": "2.4.2",
    "@types/cookie": "0.4.0",
    "@types/graphql": "14.5.0",
    "@types/jsonwebtoken": "8.5.0",
    "@types/micro-cors": "^0.1.1",
    "@types/node": "14.6.0",
    "@types/react": "16.9.46",
    "@types/react-dom": "16.9.8",
    "@types/styled-components": "5.1.2",
    "@typescript-eslint/eslint-plugin": "3.9.1",
    "@typescript-eslint/parser": "3.9.1",
    "babel-plugin-graphql-tag": "3.0.0",
    "babel-plugin-styled-components": "1.11.1",
    "eslint": "7.7.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.6",
    "graphql": "^15.3.0",
    "husky": "4.2.5",
    "prettier": "2.0.5",
    "pretty-quick": "2.0.1",
    "to": "^0.2.9",
    "typescript": "3.9.7",
    "update": "^0.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --pattern \"**/*.*(ts|tsx|graphql)\" --staged"
    }
  },
  "cacheDirectories": [
    ".next/cache"
  ],
  "repository": "https://github.com/willwillis/job-tracker-dashboard",
  "description": ""
}
